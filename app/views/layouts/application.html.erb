<!DOCTYPE html>
<html>
    <head>
        <title>CatsOnWheels</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <nav>
            <div class="nav-wrapper">
                <div class="row">
                    <div class="col s12">
                        <a href="#!" class="brand-logo">Cats on Wheels</a>
                        <ul class="right hide-on-med-and-down">
                            <li>
                                <%= link_to "Owners", owners_path, class: "" %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container">

            <%= yield %>
        </div>
    </body>
</html>
