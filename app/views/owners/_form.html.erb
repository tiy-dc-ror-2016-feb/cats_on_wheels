<%= form_for(@owner) do |f| %>
  <% if @owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
      <% @owner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>


  <%= f.fields_for :pets do |pet_fields|  %>
    <%= pet_fields.hidden_field :id %>

    <%= pet_fields.label :name, "Pet Name", class: "control-label" %>
    <%= pet_fields.text_field :name, class: "form-control" %>
  <% end %>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: 'materialize-textarea' %>
  </div>
  <div class="actions">
    <%= f.submit  options = { class: 'waves-effect waves-light btn'}  %>
  </div>
<% end %>
