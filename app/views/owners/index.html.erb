<div class="row valign-wrapper">
  <div class="col s9">
    <h1>Owners</h1>

  </div>

  <div class="col s3">
    <%= link_to 'New Owner', new_owner_path, class: 'waves-effect waves-light btn' %>
  </div>
</div>

<p>
  <%= notice %>
</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.notes %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @owners %>

<br>
